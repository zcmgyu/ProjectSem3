<div class="slider-area style-2 margin-bottom-80">
    <div class="bend niceties preview-2">
        <div id="ensign-nivoslider" class="slides">
            @foreach (var item in Model)
            {
                <img src="@Url.Content(item.Image)" alt="" title="#slider-direction-@item.ID" />
            }
            
