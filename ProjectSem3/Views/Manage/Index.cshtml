                        <div class="single-logo">
                            <img src="~/Content/Client/img/brand/6.png" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- BRAND-LOGO-AREA END -->
</section>
<!-- PAGE-CONTENT END -->
